{
  "name": "@repo/server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./router": {
      "types": "./src/root.ts",
      "default": "./src/root.ts"
    },
    "./orpc": {
      "types": "./src/orpc.ts",
      "default": "./src/orpc.ts"
    }
  },
  "scripts": {
    "dev": "bun run with-env bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run with-env bun run dist/index.js",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "format:check": "oxfmt --check .",
    "format:write": "oxfmt --write .",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@orpc/experimental-pino": "catalog:orpc",
    "@polar-sh/hono": "^0.5.3",
    "@polar-sh/sdk": "catalog:",
    "@repo/ai": "workspace:*",
    "@repo/auth": "workspace:*",
    "@repo/cache": "workspace:*",
    "@repo/db": "workspace:*",
    "@repo/env": "workspace:*",
    "@repo/logger": "workspace:*",
    "@repo/payments": "workspace:*",
    "@repo/storage": "workspace:*",
    "@repo/utils": "workspace:*",
    "hono": "^4.7.11"
  },
  "devDependencies": {
    "@types/node": "catalog:tooling",
    "@yopem/typescript-config": "catalog:tooling",
    "eslint-plugin-oxfmt": "catalog:tooling",
    "dotenv-cli": "catalog:",
    "oxfmt": "catalog:tooling",
    "oxlint": "catalog:tooling",
    "oxlint-tsgolint": "catalog:tooling",
    "typescript": "catalog:tooling"
  }
}
