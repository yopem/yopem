{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": [
    "APP_ENV",
    "DATABASE_URL",
    "REDIS_URL",
    "REDIS_KEY_PREFIX",
    "AUTH_ISSUER",
    "PUBLIC_API_URL",
    "PUBLIC_SITE_DOMAIN",
    "PUBLIC_SITE_TITLE",
    "PUBLIC_SITE_DESCRIPTION",
    "PUBLIC_SITE_TAGLINE",
    "PUBLIC_SUPPORT_EMAIL",
    "PUBLIC_LOGO_URL",
    "PUBLIC_LOGO_OG_URL",
    "PUBLIC_LOGO_OG_WIDTH",
    "PUBLIC_LOGO_OG_HEIGHT",
    "PUBLIC_GA_MEASUREMENT_ID",
    "PUBLIC_UMAMI_TRACKING_ID",
    "PUBLIC_FACEBOOK_USERNAME",
    "PUBLIC_INSTAGRAM_USERNAME",
    "PUBLIC_TIKTOK_USERNAME",
    "PUBLIC_WHATSAPP_CHANNEL_USERNAME",
    "PUBLIC_X_USERNAME",
    "PUBLIC_YOUTUBE_USERNAME",
    "WEB_ORIGIN",
    "ADMIN_ORIGIN",
    "SERVER_PORT",
    "WEB_PORT",
    "ADMIN_PORT"
  ],
  "globalPassThroughEnv": [
    "POLAR_ACCESS_TOKEN",
    "POLAR_WEBHOOK_SECRET",
    "POLAR_PRODUCT_ID",
    "API_KEY_ENCRYPTION_SECRET",
    "CF_ACCOUNT_ID",
    "R2_ACCESS_KEY",
    "R2_SECRET_KEY",
    "R2_BUCKET",
    "R2_DOMAIN",
    "R2_REGION"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".output/**", "dist/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": {},
    "lint:fix": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "format:check": {},
    "format:write": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}
