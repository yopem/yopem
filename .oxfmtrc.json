{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "bracketSpacing": true,
  "jsxSingleQuote": false,
  "printWidth": 80,
  "proseWrap": "always",
  "semi": false,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "experimentalTailwindcss": {
    "functions": ["cn", "cva"]
  },
  "experimentalSortImports": {
    "groups": [
      ["side-effect"],
      ["builtin"],
      ["external", "type-external"],
      ["internal", "type-internal"],
      ["parent", "type-parent"],
      ["sibling", "type-sibling"],
      ["index", "type-index"]
    ]
  },
  "experimentalSortPackageJson": false,
  "ignorePatterns": [
    "node_modules",
    ".pnp",
    ".pnp.js",
    ".env",
    ".env.local",
    ".env.development.local",
    ".env.test.local",
    ".env.production.local",
    "coverage",
    ".turbo",
    ".vercel",
    ".next/",
    "out/",
    "build",
    "dist",
    "npm-debug.log*",
    "yarn-debug.log*",
    "yarn-error.log*",
    ".DS_Store",
    "*.pem",
    "migrations/",
    "tsconfig.tsbuildinfo",
    "*.tsbuildinfo",
    "next-env.d.ts"
  ]
}
