{
  "name": "yopem",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yopem/yopem.git"
  },
  "author": "Karyana Yandi <karyana@yandi.me>",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:web": "turbo -F web build",
    "clean": "pnpm -r --parallel exec git clean -xdf dist .cache .turbo .next *.log",
    "clean:all": "pnpm clean && pnpm clean:deps",
    "clean:deps": "pnpm -r --parallel exec git clean -xdf node_modules",
    "check-types": "turbo check-types",
    "dev:mobile": "turbo -F mobile dev",
    "dev:web": "turbo -F web dev",
    "dev:api": "turbo -F api dev",
    "db:push": "turbo -F api db:push",
    "db:studio": "turbo -F api db:studio",
    "db:generate": "turbo -F api db:generate",
    "db:migrate": "turbo -F api db:migrate",
    "format:check": "turbo format:check",
    "format:write": "turbo format:write"
  },
  "devDependencies": {
    "@yopem/eslint-config": "catalog:tooling",
    "@yopem/prettier-config": "catalog:tooling",
    "lefthook": "1.11.12",
    "prettier": "catalog:tooling",
    "turbo": "2.5.3",
    "typescript": "catalog:tooling"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.11.0",
  "prettier": "@yopem/prettier-config/base"
}
